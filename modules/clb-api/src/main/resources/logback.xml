<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <property name="logs.path" value="./logs" />

    <appender name="ALL-LEVEL-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logs.path}/cloudbet.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- hourly rollover -->
            <fileNamePattern>${logs.path}/%d{yyyy-MM-dd_HH}.%i.log</fileNamePattern>
            <!-- 3 days to keep-->
            <maxHistory>3</maxHistory>
            <maxFileSize>10MB</maxFileSize>
        </rollingPolicy>
        <encoder>
            <pattern>%d %p %C{1.} [%t] [%X{remoteAddr}] [%X{tenant}] %m%n</pattern>
        </encoder>
    </appender>

    <appender name="ERROR-LEVEL-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- hourly rollover -->
            <fileNamePattern>${logs.path}/error/%d{yyyy-MM-dd_HH}.%i.log</fileNamePattern>
            <!-- 3 days to keep-->
            <maxHistory>3</maxHistory>
            <maxFileSize>10MB</maxFileSize>
        </rollingPolicy>
        <encoder>
            <pattern>%d %p %C{1.} [%t] [%X{remoteAddr}] [%X{tenant}] %m%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
    </appender>

    <appender name="INFO-LEVEL-APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- hourly rollover -->
            <fileNamePattern>${logs.path}/info/%d{yyyy-MM-dd_HH}.%i.log</fileNamePattern>
            <!-- 3 days to keep-->
            <maxHistory>3</maxHistory>
            <maxFileSize>10MB</maxFileSize>
        </rollingPolicy>
        <encoder>
            <pattern>%d %p %C{1.} [%t] [%X{remoteAddr}] [%X{tenant}] %m%n</pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>DENY</onMatch>
            <onMismatch>ACCEPT</onMismatch>
        </filter>
    </appender>

    <root level="INFO">
        <appender-ref ref="ALL-LEVEL-APPENDER" />
        <appender-ref ref="INFO-LEVEL-APPENDER" />
        <appender-ref ref="ERROR-LEVEL-APPENDER" />
    </root>

    <logger name="org.springframework" level="INFO"/>
    <logger name="com.tvf.cloubet" level="DEBUG"/>
</configuration>